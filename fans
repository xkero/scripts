#!/usr/bin/env bash

dev="$(echo /sys/devices/*/*/usb*/*/*/*:1B1C:0C04.*/hidraw/hidraw*)"

printf "\v\205\6\20\0\206\10\24$(printf '\%o' $(( ($1       % 256) )) $(( ($1       / 256) )))\207\t\26\0\0\0\0\0" > "/dev/${dev/*\/}"
printf "\v\205\6\20\1\206\10\24$(printf '\%o' $(( (${2:-$1} % 256) )) $(( (${2:-$1} / 256) )))\207\t\26\0\0\0\0\0" > "/dev/${dev/*\/}"

